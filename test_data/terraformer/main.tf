resource "aws_key_pair" "test" {
  key_name   = "terraformer-test-key"
  public_key = "ssh-rsa  aleks@MediaPC"
}

module "terraformer" {
  source           = "../../"
  zone_id          = var.test_zone_id
  subnet           = var.subnet_public_ids[0]
  root_volume_size = 30
  environment      = "development"
  alarm_emails     = ["test@example.com"]
  ssh_key_name     = aws_key_pair.test.key_name
  extra_ssh_cidrs = [
    "0.0.0.0/0"
  ]
}
